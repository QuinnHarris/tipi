!!! 5
%html
  %head
    %meta{ charset: 'utf-8' }
    %meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
    %meta{ name: 'viewport', content: "width=device-width, initial-scale=1.0" }
    %title= content_for?(:title) ? yield(:title) : 'Pitri.net'
    %link{href:'http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,400,300,600,700,800', rel: 'stylesheet', type:'text/css'}
    /= stylesheet_link_tag    "/typicons-font/typicons.min.css" # Typicons in public (not asset)
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag    params[:controller], media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag params[:controller], "data-turbolinks-track" => true
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    /[if IE]
      %div{style: "clear: both; height: 112px; padding:0; position: relative;"}
        %a{href: "http://www.theie8countdown.com/ie-users-info"}
          %img{alt: "", border: "0", height: "112", src: "http://www.theie8countdown.com/assets/badge_iecountdown.png", width: "348"}
    %nav.top-bar{data:{"topbar" => ""}}
      %ul.title-area
        %li.name
          %h1
            = link_to 'Pitri.net', root_path
        %li.toggle-topbar.menu-icon
          %a{href:"#"}
      %section.top-bar-section
        / Right Nav Section
        %ul.right
          - if user_signed_in?
            %li.has-dropdown
              = link_to 'My Tipi'
              %ul.dropdown
                %li= link_to 'My Tipis'
                %li= link_to 'Profile', edit_user_registration_path
                %li= link_to 'Log Out', destroy_user_session_path, method: :delete
          - else
            %li= link_to 'Sign In', new_user_session_path
    - if user_signed_in? || Rails.env.development?
      .row.fullWidth
        .large-3.small-4.columns.lnav
          %h5 Your Name
          %ul
            %li.da Tasks
            %ul
              %li.la Upcoming Tasks
              %li.da context 1
              %ul
                %li.da subcontext
                %ul
                  %li task
                  %li task
              %li task 1
              %li task 2
              %li task 3
              %li ...
            %li.da Processes
            %ul
              %li.da Company One
              %ul
                %li.da Sales Department
                %ul
                  %li.da Lead to Sale
                  %ul
                    %li recieve email
                    %li second task
                    %li third task
                  %li.la Annual Sales Event
                  %li.la Master Sales Process
                %li.la Marketing Department
                %li.la Customer Service Team
              %li.la ABC company
              %li.la Devil Worshipers Association
        .large-9.small-8.columns
          = yield
    - else
      = yield
