!!! 5
%html
  %head
    %meta{ charset: 'utf-8' }
    %meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
    %meta{ name: 'viewport', content: "width=device-width, initial-scale=1.0" }
    %title= content_for?(:title) ? yield(:title) : 'Pitri.net'
    
    %link{href:'http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,400,300,600,700,800', rel: 'stylesheet', type:'text/css'}
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag    params[:controller], media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag params[:controller], "data-turbolinks-track" => true
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    %header.content-header
      .left
        =link_to root_path do
          .logo Pitri.net
      .center
        .search
          .div
            %input{placeholder: "Search Pitri.net"}
            .icon.fa.fa-search.fa-lg{title: "search Pitri"}
      .right
        =link_to categories_path do
          %i.browse{title: 'browse Pitri'} browse 
        -if user_signed_in?
          =link_to new_project_path do
            %i.fa.fa-flask.create{title: "new Project"}
          %i.fa.fa-exclamation-circle.notifications{title: 'notificatioins'}
          %i.fa.fa-cog.user-menu
        -else
          =link_to new_user_session_path do
            %i.sign-in sign in
    =yield