!!! 5
%html
  %head
    %meta{ charset: 'utf-8' }
    %meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
    %meta{ name: 'viewport', content: "width=device-width, initial-scale=1.0" }
    %title= content_for?(:title) ? yield(:title) : 'Pitri.net'
    
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = stylesheet_link_tag    params[:controller], media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag params[:controller], "data-turbolinks-track" => true
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    %header.content-header
      .left
        =link_to "Pitri.net", root_path
      .center
        .search
          .div
            %input{placeholder: "Search Pitri.net"}
            .icon.fa.fa-search.fa-lg{title: "search"}
      .right
        =link_to categories_path do
          %i.fa.fa-sitemap.browse
        =link_to new_project_path do
          %i.fa.fa-flask.create
        -if user_signed_in?
          .notifications
          .user-menu
        -else
          .sign-in
    =yield